@page "{token?}"
@model EngTimesheet.Pages.ResetModel
@{
	ViewData["Title"] = "Reset";
}

<h2>@(String.IsNullOrWhiteSpace(Model.Token) ? "Request Password Reset" : "Reset Password")</h2>

<div class="container" style="margin-top: 10px;">
	<label style="color:red;">@Model.Message</label>
	<form action="" method="post">
		@if(String.IsNullOrWhiteSpace(Model.Token))
		{
			<div class="row">
				<div class="col-md-3">
					<label asp-for="Email"></label>
					<input asp-for="Email" class="form-control" required />
					<span class="alert-danger" asp-validation-for="Email"></span>
				</div>
			</div>
		}
		else
		{
			<div class="row">
				<div class="col-md-3">
					<label asp-for="Password"></label>
					<input asp-for="Password" type="password" class="form-control" required />
					<span class="alert-danger" asp-validation-for="Password"></span>
				</div>
			</div>
			<div class="row">
				<div class="col-md-3">
					<label asp-for="PasswordCheck"></label>
					<input asp-for="PasswordCheck" type="password" class="form-control" required />
					<span class="alert-danger" asp-validation-for="Password"></span>
				</div>
			</div>
		}
		<br />
		<div class="row">
			<div class="col-md-3">
				<input type="submit"
					   value="@(String.IsNullOrWhiteSpace(Model.Token) ? "Send Reset Email" : "Reset Password")"
					   class="btn btn-primary" />
			</div>
		</div>
	</form>
</div>

