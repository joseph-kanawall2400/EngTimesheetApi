@page
@model EngTimesheet.Pages.SettingsModel
@{
	ViewData["Title"] = "Settings";
}

<h2>@Model.Model.FullName's Settings</h2>


<div class="container" style="margin-top: 10px;">
	<label style="color:red;">@Model.Message</label>
	<form action="" method="post">
		<div class="row">
			<div class="col-md-3">
				<label asp-for="Model.Email"></label>
				<input asp-for="Model.Email" class="form-control" type="email" required />
				<span class="alert-danger" asp-validation-for="Model.Email"></span>
			</div>
		</div>
		<div class="row">
			<div class="col-md-3">
				<label asp-for="Model.FirstName"></label>
				<input asp-for="Model.FirstName" class="form-control" required />
				<span class="alert-danger" asp-validation-for="Model.FirstName"></span>
			</div>
		</div>
		<div class="row">
			<div class="col-md-3">
				<label asp-for="Model.LastName"></label>
				<input asp-for="Model.LastName" class="form-control" required />
				<span class="alert-danger" asp-validation-for="Model.LastName"></span>
			</div>
		</div>
		<br />
		<div class="row">
			<div class="col-md-3">
				<input type="submit" value="Update Settings" class="btn btn-primary" />
			</div>
		</div>
		@Html.HiddenFor(x => Model.Model.Id)
		@Html.HiddenFor(x => Model.Model.Manager)
		@Html.HiddenFor(x => Model.Model.Deactivated)
		@Html.HiddenFor(x => Model.Model.Registered)
	</form>
</div>
