@page
@model EngTimesheet.Pages.IndexModel
@{
	ViewData["Title"] = "Login";
}

<h2>Login</h2>

<div class="container" style="margin-top: 10px;">
	<label style="color:red;">@Model.Message</label>
	<form action="" method="post">
		<div class="row">
			<div class="col-md-3">
				<label asp-for="Email"></label>
				<input asp-for="Email" class="form-control" required />
				<span class="alert-danger" asp-validation-for="Email"></span>
			</div>
		</div>
		<div class="row">
			<div class="col-md-3">
				<label asp-for="Password"></label>
				<input asp-for="Password" type="password" class="form-control" required />
				<span class="alert-danger" asp-validation-for="Password"></span>
			</div>
		</div>
		<br />
		<div class="row">
			<div class="col-md-3">
				<input type="submit" value="Login" class="btn btn-primary" />
			</div>
		</div>
		<div class="row">
			<div class="col-md-3">
				<a asp-page="/Reset">Reset Password</a>
			</div>
		</div>
		<div class="row">
			<div class="col-md-3">
				<a asp-page="/Register">Register</a>
			</div>
		</div>
	</form>
</div>